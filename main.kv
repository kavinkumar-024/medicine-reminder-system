<HomeScreen>:
    name:'home'
    MDFloatLayout:
        Image:
            source:'home.jpeg'
            keep_ratio:'True'
            allow_stretch:'True'
        MDLabel:
            id:rest_label
            text:"LETS TAKE MEDS \n      ON TIME"
            font_size : "30sp"
            pos_hint:{'center_x':.69,'center_y':.89}
            bold:True
        MDRaisedButton:
            text:'Date Picker'
            font_size : "30sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            on_press: root.manager.current = 'Date'





<DateScreen>:
    name:'Date'
    canvas.before:
        Color:
            rgba:(.255,.105,0,.3)
        Rectangle:
            pos: self.pos
            size:self.size
    BoxLayout:
        orientation: 'vertical'
        padding: dp(48)
        spacing: dp(16)


        MDLabel:
            text: "MEDS REMINDER"
            color : "red"
            font_size: "30sp"
            font_name:"Arial"
            bold: True
            halign: "center"

        MDLabel:
            id: date_label
            text: "Select a date and click the 'Next' button"
            bold: True
            halign: "center"

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(48)
            spacing: dp(16)

            MDRectangleFlatButton:
                text: "Open Date Picker"
                on_release: root.show_date_picker()
                text_color: 1, 1, 1, 1
                md_bg_color: 0, 0, 0, 1

            MDRectangleFlatButton:
                text: 'Next'
                on_press: root.manager.current = 'menu'
                text_color: 1, 1, 1, 1
                md_bg_color: 0, 0, 0, 1

<MenuScreen>:
    name:'menu'
    MDNavigationLayout:
        md_bg_color: 0,1,1,1
        ScreenManager:
            Screen:

                BoxLayout:
                    orientation:'vertical'
                    MDBottomAppBar:
                        title: 'Demo Application'
                        elevation:3

                    Widget:


                ScrollView:
                    MDList:
                        TwoLineIconListItem:
                            text: 'MORNING'
                            secondary_text:'schedule meds and save'
                            pos_hint: {'center_x':.9, 'center_y':.4}
                            on_press:lambda *args: root.list_items()
                            IconLeftWidget:
                                icon: 'clock'
                            MDIconButton:
                                icon: 'pill'
                                pos_hint: {'center_x':.9, 'center_y':.4}
                                on_release: root.user_input()
                            MDIconButton:
                                icon: 'clock'
                                pos_hint: {'center_x':.8, 'center_y':.4}
                                on_press: root.manager.current = 'alarm'



                        TwoLineIconListItem:
                            text: 'MIDDAY'
                            pos_hint: {'center_x':.9, 'center_y':.4}
                            secondary_text:'add the meds'
                            IconLeftWidget:
                                icon: 'clock'
                            MDIconButton:
                                icon: 'pill'
                                pos_hint: {'center_x':.9, 'center_y':.4}
                                on_release: root.user_input()
                            MDIconButton:
                                icon: 'clock'
                                pos_hint: {'center_x':.8, 'center_y':.4}
                                on_press: root.manager.current = 'alarm1'

                        TwoLineIconListItem:
                            text: 'EVENING'
                            secondary_text:'add the meds'
                            pos_hint: {'center_x':.9, 'center_y':.4}
                            IconLeftWidget:
                                icon: 'clock'
                            MDIconButton:
                                icon: 'pill'
                                pos_hint: {'center_x':.9, 'center_y':.4}
                                on_release: root.user_input()
                            MDIconButton:
                                icon: 'clock'
                                pos_hint: {'center_x':.8, 'center_y':.4}
                                on_press: root.manager.current = 'alarm2'

                        TwoLineIconListItem:
                            text: 'NIGHT'
                            secondary_text:'add the meds'
                            pos_hint: {'center_x':.5, 'center_y':.5}
                            IconLeftWidget:
                                icon: 'clock'
                            MDIconButton:
                                icon: 'pill'
                                pos_hint: {'center_x':.9, 'center_y':.4}
                                on_release: root.user_input()
                            MDIconButton:
                                icon: 'clock'
                                pos_hint: {'center_x':.8, 'center_y':.4}
                                on_press: root.manager.current = 'alarm3'

    MDRaisedButton:
        text : "save"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: root.manager.current = 'remain'

    MDRaisedButton:
        text : "reset"
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        on_press: root.manager.current = 'reset'

    MDRaisedButton:
        text : "add units"
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_press: root.manager.current = 'units'

    MDRaisedButton:
        text : "back"
        on_press: root.manager.current = 'Date'

    MDRaisedButton:
        text : "details"
        pos_hint:{'center_x':0.5,'center_y':0.1}
        on_press: root.manager.current = 'data'


<More_screen>:
    name:'more'
    BoxLayout:
        orientation:'vertical'
        padding:dp(48)
        spacing:dp(16)

        MDRaisedButton:
            text : "reset"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            on_press: root.manager.current = 'reset'

        MDRaisedButton:
            text : "add units"
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            on_press: root.manager.current = 'units'

