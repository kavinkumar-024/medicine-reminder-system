<ResetScreen>:
    name: 'reset'

    MDFloatLayout:
        MDLabel:
            id: rest_label
            text: "     Click Reset to Reset"
            font_size: "30sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            bold: True

        MDRaisedButton:
            text: 'Reset'
            font_size: "20sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            on_release: root.reset()
            size_hint: None, None
            size: "200dp", "60dp"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)  # Customize the button text color
            md_bg_color: (0.3, 0.6, 0.9, 1)  # Customize the button background color

        MDRaisedButton:
            text: 'Back'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_press: root.manager.current = 'menu'
            size_hint: None, None
            size: "200dp", "60dp"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)  # Customize the button text color
            md_bg_color: (0.3, 0.6, 0.9, 1)  # Customize the button background color


