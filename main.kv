<Add_units>:
    name:'units'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(48)
        spacing: dp(16)

        MDLabel:
            id: my_label
            text: "ADD USING ADD UNITS"
            font_size: "24sp"
            bold: True
            halign: "center"

        MDLabel:
            id: click_label
            text: "Pick"
            font_size: "32sp"
            bold: True
            pos_hint:{'center_x':.5,'center_y':.8}

        Spinner:
            id: spinner_id
            text: "Sessions"
            size_hint: (None, None)
            size: dp(200), dp(48)
            pos_hint: {'center_x': 0.5}
            values: ['Morning', 'Midday', 'Evening', 'Night']
            on_text: root.spinner_clicked(spinner_id.text)

        MDRaisedButton:
            text: "Add Units"
            size_hint: (None, None)
            size: dp(200), dp(48)
            pos_hint: {'center_x': 0.5}
            on_release: root.on_button_click()

        MDRaisedButton:
            text: 'Back'
            size_hint: (None, None)
            size: dp(200), dp(48)
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = 'menu'

